{
    "compilerOptions": {
        "lib": ["es2020", "dom"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2020",
        "types": ["node", "jest"],
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "cli", "**/*.test.ts", "tests"]
}
