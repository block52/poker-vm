{
    "compilerOptions": {
        "lib": ["es2020", "dom"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2020",
        "types": ["node", "jest"],
        "sourceMap": true,
        "outDir": "dist/src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "include": ["src/**/*.ts", "tests/senario.test.ts"],
    "exclude": ["node_modules", "dist", "cli"]
}
