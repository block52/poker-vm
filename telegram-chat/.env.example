# Server Configuration
PORT=8080

# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# The chat ID of your channel/group (can be negative for groups)
TELEGRAM_CHAT_ID=-1001234567890

# Your public webhook URL (must be HTTPS in production)
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/telegram/webhook

# Secret token for webhook validation (generate a random string)
TELEGRAM_SECRET_TOKEN=your_secret_token_here

# Public URL for your Telegram channel (for "Open in Telegram" button)
TELEGRAM_CHANNEL_URL=https://t.me/your_channel

# CORS - comma separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
